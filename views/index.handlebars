<div class="jumbotron">
  <h1 class="display-4">Eat Da Burgers!</h1>
  <img src="/assets/img/burger.jpg" alt="burger">

</div>

<div class="container burger-queue">
  <div class="row">
    <h2>Undevoured Succulent Burgers!</h2>

    <ul>
      {{#each burgers}}
      {{#unless this.devoured}}
      {{> burger-block  devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>
</div>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if this.devoured}}
  {{> burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger-update" name="name">
  </div>
  <button type="submit" class="change-devoured">Update Burger(s)</button>
</form>